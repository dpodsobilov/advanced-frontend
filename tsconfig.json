{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    // в какую версию компилируем
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // позволяет использовать import вместо require
    "esModuleInterop": true,
    // позволяет использовать default import вместо * as ...
    "allowSyntheticDefaultImports": true,
    // для абсолютных импортов
    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
